model Recruitment {
  id             Int      @id @default(autoincrement())
  //tiêu đề tuyển dụng
  titleJob       String?
  //Liên hệ với chúng tôi
  titleForm      String?
  //Nơi làm việc
  address        String?
  //Cấp Bâtj
  rank           String?
  //Hình thức
  form           String?
  //Bằng Cấp
  certificate    String?
  //Kinh nghiệm
  experience     String?
  //Mức lương
  rangeSalary    Int?
  // Ngành nghề
  career         String?
  //Hạn chót
  deadline       String?
  //Phúc lợi
  welfare        String[]
  //Mô tả job
  descriptionJob String?
  //Yêu cầu công việc
  requirementJob String?
  createdAt      DateTime @default(now()) @map(name: "created_at")
  updatedAt      DateTime @updatedAt @map(name: "updated_at")

  @@map(name: "recruitments")
}

